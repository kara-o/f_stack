<!DOCTYPE html>
<html>
  <head>
    <title>FStack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="navbar">
  <a href="/" class="">
    <h2>Flatiron's Stack Overflow</h2>
  </a>
    <div class="right menu">
      <% if logged_in? %>
        Logged in as: <%= current_user.username %>
        <%= link_to 'My Page', user_path(current_user) %>
        <%= link_to 'Logout', logout_path %>

      <% else %>
        <%= link_to 'Existing User/Login', login_path %>
        <%= link_to 'New User/Create Account', new_user_path %>
      <% end %>
    </div>
</div>

  <body>
    <%= yield %>
  </body>
</html>
