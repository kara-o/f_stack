<h2>Most Recent Questions</h2>

<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<% @questions.each do |q| %>
  <% if q.deleted == false %>
  <ul>
    <li><h3><%= link_to q.title, question_path(q.id) %></h3>
    <h5>Created at <%= q.created_at.localtime.strftime("%I:%M:%S %p %m-%d-%Y") %></h5>
    </li>
  </ul>
  <% end %>
<% end %>

<%= form_with(url: "/questions", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
