<h2>New Question</h2>

<%= form_with model: @question do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br>

  Tags:
  <ul>
  <%= f.fields_for @question_tag do |qt_form| %>
      <%= qt_form.collection_check_boxes :tag_id, Tag.all, :id, :name %>
      <%= qt_form.hidden_field :question_id, :value => @question.id %>
  <% end %>
  </ul>

  <%= f.submit "Post" %>
<% end %>
