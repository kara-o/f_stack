<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>
<div id="login-page">
<h2>Welcome, please login!</h2>

<%= form_with model: @user do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email, style: "width: 200px" %>

  <%= f.submit "Login" %>
<% end %>
<br>
<%= link_to "New? Click here to create an account", new_user_path %>
</div>
