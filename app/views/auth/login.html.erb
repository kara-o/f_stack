<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<h2>Welcome, please login!</h2>
<br>

<%= form_with model: @user do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %><br>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %><br>

  <%= f.submit "Login" %>
<% end %>
<br>
<%= link_to "New? Click here to create an account", new_user_path %>
